@using Microsoft.AspNetCore.Components
@using Mooc.Data
@using Microsoft.EntityFrameworkCore

@{
    // Filtrer pour n'afficher que les sessions qui sont en ligne ET disponibles selon les dates
    var availableSessions = Sessions?.Where(s => s.IsActive && IsSessionAvailableForEnrollment(s)).ToList();
}

@if (availableSessions != null && availableSessions.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var session in availableSessions)
        {
            <div class="col">
                <div class="card mooc">
                    <img src="@session.Image" class="card-img-top" alt="Image of @session.Title">
                    <div class="card-body">
                        <h5 class="card-title">@session.Title</h5>

                        <p>@session.Description</p>

                        @if (IsSessionAvailableForEnrollment(session))
                        {
                            <a href="/inscription/@session.Id" class="btn m-lg-1">S'inscrire</a>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>
                                @if (DateTime.Now < session.StartDate)
                                {
                                    <span>Bientôt disponible</span>
                                }
                                else
                                {
                                    <span>Session terminée</span>
                                }
                            </button>
                        }

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-@session.Id">
                            Voir plus
                        </button>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="modal-@session.Id" tabindex="-1" aria-labelledby="modal-label-@session.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="modal-label-@session.Id">@session.Title</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p class="card-text">@(session.Description?.Length > 30 ? session.Description.Substring(0, 30) + "..." : session.Description)</p>
                                @if (session.Courses != null && session.Courses.Any())
                                {
                                    <ul class="list-group">
                                        <li class="list-group-item hl">Programme de formation</li>
                                        @foreach (var course in session.Courses)
                                        {
                                            <li class="list-group-item list-group-item-action">@course.Title</li>
                                        }
                                    </ul>
                                }
                                <div class="pt-3">
                                    <p>Date de début : @session.StartDate.ToString("dd/MM/yyyy")</p>
                                    <p>Date de fin : @session.EndDate.ToString("dd/MM/yyyy")</p>
                                    <p>Effort estimé : @GetEstimatedEffort(session.Work) h</p>
                                    
                                    @if (!IsSessionAvailableForEnrollment(session))
                                    {
                                        <div class="alert alert-warning">
                                            @if (DateTime.Now < session.StartDate)
                                            {
                                                <span>Inscriptions ouvertes le @session.StartDate.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span>Session terminée le @session.EndDate.ToString("dd/MM/yyyy")</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                @if (IsSessionAvailableForEnrollment(session))
                                {
                                    <a href="/inscription/@session.Id" class="btn">S'inscrire</a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary" disabled>Inscription fermée</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Aucune session disponible pour inscription pour le moment.</p>
}

@code {
    [Parameter]
    public List<Session>? Sessions { get; set; }

    private string GetEstimatedEffort(int hours)
    {
        return hours.ToString();
    }

    private bool IsSessionAvailableForEnrollment(Session session)
    {
        var now = DateTime.Now;
        // Les inscriptions sont disponibles pendant la période de la session
        return now >= session.StartDate && now <= session.EndDate;
    }
}
