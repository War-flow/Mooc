@using Microsoft.AspNetCore.Components
@using Mooc.Data
@using Microsoft.EntityFrameworkCore

@{
    // Filtrer pour n'afficher que les sessions qui sont en ligne (IsActive = true)
    var activeSessions = Sessions?.Where(s => s.IsActive).ToList();
}

@if (activeSessions != null && activeSessions.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var session in activeSessions)
        {
            <div class="col">
                <div class="card mooc">
                    <img src="@session.Image" class="card-img-top" alt="Image of @session.Title">
                    <div class="card-body">
                        <h5 class="card-title">@session.Title</h5>
                        <a href="/inscription/@session.Id" class="btn">S'inscrire</a>

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-@session.Id">
                            Voir plus
                        </button>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="modal-@session.Id" tabindex="-1" aria-labelledby="modal-label-@session.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="modal-label-@session.Id">@session.Title</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p class="card-text">@session.Description</p>
                                @if (session.Courses != null && session.Courses.Any())
                                {
                                    <ul class="list-group">
                                        <li class="list-group-item hl">Programme de formation</li>
                                        @foreach (var course in session.Courses)
                                        {
                                            <li class="list-group-item list-group-item-action">@course.Title</li>
                                        }
                                    </ul>
                                }
                                <div class="pt-3">
                                    <p>Date de début : @session.StartDate.ToString("dd/MM/yyyy")</p>
                                    <p>Date de fin : @(session.EndDate.HasValue ? session.EndDate.Value.ToString("dd/MM/yyyy") : "Non définie")</p>
                                    <p>Effort estimé : @GetEstimatedEffort(session.Work) h</p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                <a href="/inscription/@session.Id" class="btn">S'inscrire</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Aucune session disponible pour le moment.</p>
}

@code {
    [Parameter]
    public List<Session>? Sessions { get; set; }

    private string GetEstimatedEffort(int hours)
    {
        return hours.ToString();
    }
}
